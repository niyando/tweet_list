<%= form_for(@compilation) do |f| %>

 
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <%= f.fields_for :tweets do |builder| %>
    <%= render 'tweet_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Tweet", f, :tweets %>

  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>